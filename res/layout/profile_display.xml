<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:text=""
            android:id="@+id/horizBar1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#bbbbbb"
            android:layout_below="@+id/save" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:id="@+id/profileView"
            android:visibility="visible"
            android:layout_below="@+id/horizBar1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Name:"
                android:id="@+id/nameLabel"
                android:layout_alignStart="@+id/genderLabel"
                android:layout_below="@+id/horizBar1"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:id="@+id/space1"
                android:layout_row="0"
                android:layout_column="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editName"
                android:layout_alignBottom="@+id/nameLabel"
                android:layout_centerHorizontal="true"
                android:text="User Name"
                android:background="#ffffff"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Gender:"
                android:id="@+id/genderLabel"
                android:layout_below="@+id/nameLabel"
                android:layout_alignStart="@+id/username"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Birthday:"
                android:id="@+id/dobLabel"
                android:layout_below="@+id/genderLabel"
                android:layout_alignStart="@+id/genderLabel"
                android:layout_row="2"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editDOB"
                android:layout_row="2"
                android:layout_column="2"
                android:text="01/01/2000"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Degree:"
                android:id="@+id/degreeLabel"
                android:layout_below="@+id/dobLabel"
                android:layout_alignStart="@+id/dobLabel"
                android:layout_row="3"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinnerDegree"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Major:"
                android:id="@+id/majorLabel"
                android:layout_below="@+id/degreeLabel"
                android:layout_alignStart="@+id/degreeLabel"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinnerMajor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Grad Year:"
                android:id="@+id/gradyearLabel"
                android:layout_below="@+id/majorLabel"
                android:layout_alignStart="@+id/majorLabel"
                android:layout_row="5"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editGradYear"
                android:layout_row="5"
                android:layout_column="2"
                android:text="2020"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Email:"
                android:id="@+id/emailLabel"
                android:layout_below="@+id/gradyearLabel"
                android:layout_alignStart="@+id/gradyearLabel"
                android:layout_row="6"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editEmail"
                android:layout_row="6"
                android:layout_column="2"
                android:text="user.name@mavs.uta.edu"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Phone:"
                android:id="@+id/phoneLabel"
                android:layout_below="@+id/emailLabel"
                android:layout_alignStart="@+id/emailLabel"
                android:layout_row="7"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Residence:"
                android:id="@+id/residenceLabel"
                android:layout_row="8"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinnerResidence"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPhone"
                android:layout_row="7"
                android:layout_column="2"
                android:text="(123) 456-7890"
                android:inputType="phone"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </GridLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="private profile"
            android:id="@+id/privacy"
            android:layout_below="@+id/profileView"
            android:checked="false"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/horizBar2"
            android:layout_below="@+id/privacy"
            android:layout_alignParentStart="true"
            android:background="#bbbbbb"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/changePassword"
            android:layout_alignParentStart="true"
            android:id="@+id/passwordView"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="New Password:"
                android:id="@+id/passwordLabel1"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/space2"
                android:layout_row="0"
                android:layout_column="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPassword1"
                android:layout_row="0"
                android:layout_column="2"
                android:text=""
                android:background="#ffffff"
                android:padding="3dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Confirm Password:"
                android:id="@+id/passwordLabel2"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#000000" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPassword2"
                android:layout_row="1"
                android:layout_column="2"
                android:text=""
                android:background="#ffffff"
                android:padding="3dp"
                android:textSize="14sp" />
        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="change password"
            android:id="@+id/changePassword"
            android:layout_below="@+id/horizBar2"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:visibility="visible"
            android:textColor="#555555"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(x) exit"
            android:id="@+id/exit"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="#ff0000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="(✓) save changes"
            android:id="@+id/save"
            android:layout_alignParentTop="true"
            android:textColor="#00aa00"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp" />
    </RelativeLayout>
</ScrollView>