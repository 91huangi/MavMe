<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#efefef">

    <TextView
        android:text=">> save changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/saveChanges"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#00aa00"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <TextView
        android:text="(x) cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/cancel"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:textSize="18sp" />

    <TextView
        android:text="GROUP NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:id="@+id/groupNameLabel"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:text="SET PARENT GROUP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/parentGroupLabel"
        android:layout_below="@+id/editGroupName"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="New Group"
        android:ems="10"
        android:id="@+id/editGroupName"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/groupNameLabel"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:background="#ffffff"
        android:layout_marginLeft="100dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="14sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/parentGroup"
        android:layout_below="@+id/parentGroupLabel"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginLeft="100dp" />

    <TextView
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/deleteGroup"
        android:textColor="#ffffff"
        android:textStyle="normal|bold"
        android:background="#ffa500"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

</RelativeLayout>