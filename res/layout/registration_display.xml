<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#efefef">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef">


        <TextView
            android:text="(âœ“) complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/register"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#00aa00" />

        <TextView
            android:text="(x) cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/exit"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#ff0000"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/registerView"
            android:visibility="visible"
            android:layout_below="@+id/register"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Name:"
                android:id="@+id/nameLabel"
                android:layout_alignStart="@+id/genderLabel"
                android:layout_below="@+id/horizBar1"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:id="@+id/space1"
                android:layout_row="0"
                android:layout_column="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editName"
                android:layout_alignBottom="@+id/nameLabel"
                android:layout_centerHorizontal="true"
                android:text="Full Name"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Gender:"
                android:id="@+id/genderLabel"
                android:layout_below="@+id/nameLabel"
                android:layout_alignStart="@+id/username"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="14sp"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Birthday:"
                android:id="@+id/dobLabel"
                android:layout_below="@+id/genderLabel"
                android:layout_alignStart="@+id/genderLabel"
                android:layout_row="2"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editDOB"
                android:layout_row="2"
                android:layout_column="2"
                android:text="01/01/2000"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Degree:"
                android:id="@+id/degreeLabel"
                android:layout_below="@+id/dobLabel"
                android:layout_alignStart="@+id/dobLabel"
                android:layout_row="3"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:textSize="14sp"
                android:id="@+id/spinnerDegree"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Major:"
                android:id="@+id/majorLabel"
                android:layout_below="@+id/degreeLabel"
                android:layout_alignStart="@+id/degreeLabel"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:textSize="14sp"
                android:id="@+id/spinnerMajor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="2"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Grad Year:"
                android:id="@+id/gradyearLabel"
                android:layout_below="@+id/majorLabel"
                android:layout_alignStart="@+id/majorLabel"
                android:layout_row="5"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/editGradYear"
                android:layout_row="5"
                android:layout_column="2"
                android:text="2020"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Email:"
                android:id="@+id/emailLabel"
                android:layout_below="@+id/gradyearLabel"
                android:layout_alignStart="@+id/gradyearLabel"
                android:layout_row="6"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/editEmail"
                android:layout_row="6"
                android:layout_column="2"
                android:text="email@mavs.uta.edu"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Phone:"
                android:id="@+id/phoneLabel"
                android:layout_below="@+id/emailLabel"
                android:layout_alignStart="@+id/emailLabel"
                android:layout_row="7"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Residence:"
                android:id="@+id/residenceLabel"
                android:layout_row="8"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/spinnerResidence"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="2"
                android:textSize="14sp"
                android:spinnerMode="dropdown"
                android:background="#ffffff" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editPhone"
                android:layout_row="7"
                android:layout_column="2"
                android:text="000-000-0000"
                android:inputType="phone"
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </GridLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="private profile"
            android:id="@+id/privacy"
            android:layout_below="@+id/registerView"
            android:checked="false"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/privacy"
            android:layout_alignParentStart="true"
            android:id="@+id/horizBar"
            android:background="#aaaaaa"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizBar"
            android:layout_alignParentStart="true"
            android:id="@+id/passwordView"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Password:"
                android:id="@+id/passwordLabel1"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:id="@+id/space2"
                android:layout_row="0"
                android:layout_column="1" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPassword1"
                android:layout_row="0"
                android:layout_column="2"
                android:text=""
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Confirm Password:"
                android:id="@+id/passwordLabel2"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:layout_marginBottom="15dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/editPassword2"
                android:layout_row="1"
                android:layout_column="2"
                android:text=""
                android:background="#ffffff"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />
        </GridLayout>

    </RelativeLayout>

</ScrollView>